<!DOCTYPE html>
<html lang="es">
<head>
  <link rel="stylesheet" href="./style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <script src="script.js" defer></script>
  <style>
  </style>
</head>
<body>
  <div id="contenedor">
    <div id="calculadora">
      <div class="contenido">
        <h1>Calculadora de hidratación</h1>
        <p class="item">Ingrese todos los datos</p>
        <input class="item" id="peso" type="number" placeholder="Peso en kg" required />
        <p class="item error" id="error">* Ingrese todos los datos</p>
        <button class="item" id="calcular">Calcular</button>
        <p class="item resultado" id="flu">71cc/h</p>
        <p class="item resultado" id="man">m+m/2 : 105cc/h</p>
      </div>
    </div>
    <div id="detalle">
      <div class="contenido">
        <h1>¿Cómo se calcula?</h1>
        <ul>
          <li>De 0kg a 10kg, se calcula 100cc por cada kilogramo.</li>
          <li>Para pesos por encima de 10kg hasta 20kg, se suman 50cc por cada kilogramo.</li>
          <li>Para pesos por encima de 20kg, se suman 20cc por cada kilogramo adicional.</li>
        </ul>
      </div>
    </div>
  </div>

  <script>
    const pesoInput = document.getElementById('peso');
    const errorElement = document.getElementById('error');
    const fluElement = document.getElementById('flu');
    const manElement = document.getElementById('man');
  
    // Anima el campo de entrada al enfocarse
    pesoInput.addEventListener('focus', () => {
      pesoInput.classList.add('animate__animated', 'animate__bounceIn');
      setTimeout(() => {
        pesoInput.classList.remove('animate__animated', 'animate__bounceIn');
      }, 1000);
    });
  
    // Anima los elementos de resultado al hacer clic
    const calcularButton = document.getElementById('calcular');
    calcularButton.addEventListener('click', () => {
      // Verifica si se ha ingresado un peso antes de calcular
      if (!pesoInput.value) {
        errorElement.textContent = "* Ingrese todos los datos";
        errorElement.style.display = 'block';
        fluElement.style.display = 'none'; // Oculta el resultado si hay un error
        manElement.style.display = 'none'; // Oculta el resultado si hay un error
        return;
      } else {
        errorElement.style.display = 'none';
      }
  
      // Realiza las animaciones de resultado
      fluElement.classList.add('animate__animated', 'animate__fadeInUp');
      manElement.classList.add('animate__animated', 'animate__fadeInUp');
  
      // Actualiza los resultados en la página
      const peso = parseFloat(pesoInput.value);
      if (peso <= 30) {
        const resultadoHollidaySegar = calcularHidratacionHollidaySegar(peso);
        fluElement.innerHTML = `<span class="animate__animated animate__fadeIn">${resultadoHollidaySegar.mantenimiento.toFixed(2)} cc/h</span>`;
        manElement.innerHTML = `<span class="animate__animated animate__fadeIn">${resultadoHollidaySegar.mMasM2.toFixed(2)} cc/h</span>`;
      } else {
        const resultadoSuperficieCorporal = calcularHidratacionSuperficieCorporal(peso);
        fluElement.innerHTML = `<span class="animate__animated animate__fadeIn">${resultadoSuperficieCorporal.volumenDiario1500.toFixed(2)} cc/h</span>`;
        manElement.innerHTML = `<span class="animate__animated animate__fadeIn">${resultadoSuperficieCorporal.volumenDiario2000.toFixed(2)} cc/h</span>`;
      }
  
      // Muestra los resultados
      fluElement.style.display = 'block';
      manElement.style.display = 'block';
  
      // Elimina las clases de animación después de la animación
      setTimeout(() => {
        fluElement.classList.remove('animate__animated', 'animate__fadeInUp');
        manElement.classList.remove('animate__animated', 'animate__fadeInUp');
      }, 1000);
    });
  </script>
  
</body>
</html>
